<StartScreen>:
    id: start_screen

    MDFloatLayout:
        MDLabel:
            text: 'Al-Wabil'
            font_style: 'H2'
            halign: 'center'
            pos_hint: {'center_x': .5, 'center_y': .7}

        MDLabel:
            text: 'Learn duas for your daily live'
            halign: 'center'
            theme_text_color: 'Secondary'
            pos_hint: {'center_x': .5, 'center_y': .64}

        MDRaisedButton:
            text: 'Get Started'
            size_hint: (.6, .055)
            pos_hint: {'center_x': .5, 'center_y': .1}
            on_release: start_screen.next_screen_buttton()


<TextScreen>:
    id: text_screen
    MDLabel:
        text: 'Chapter'
        halign: 'center'


<MainScreen>:
    id: main_screen
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Al-Wabil'
            left_action_items: [["menu", lambda x: app.callback()]]
            elevation: 7

        MDTabs:
            Tab:
                text: 'Chapters'
                ScrollView:
                    MDList:
                        OneLineListItem:
                            text: 'Слова поминания, произносимые в начале дня'
                            on_release: main_screen.new_screen()


            Tab:
                text: 'Names'
